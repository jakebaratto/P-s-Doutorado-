// CORRELAÇÃO DO EVI e Ts 
var linear_correlTEVI =  colletion.select(['EVI', 'Ts'])
  .reduce(ee.Reducer.pearsonsCorrelation());
 
 
 /// Exportar o correlação  EVI  e Ts
 Export.image.toDrive({
  image: linear_correlTEVI.select('correlation'),
